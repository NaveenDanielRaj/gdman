name: ğŸš€ Deploy dist folder to cPanel Web Disk

on:
  push:
    branches: [main]

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: ğŸ›’ Checkout repository
        uses: actions/checkout@v3

      - name: ğŸ“‚ Verify dist folder exists
        run: |
          if [ ! -d "dist" ]; then
            echo "âŒ 'dist' folder not found"
            exit 1
          fi

      - name: ğŸ›  Install cadaver (WebDAV CLI)
        run: |
          sudo apt-get update
          sudo apt-get install -y cadaver

      - name: ğŸš€ Upload dist/ to WebDAV
        env:
          WEBDAV_USERNAME: ${{ secrets.WEBDAV_USERNAME }}
          WEBDAV_PASSWORD: ${{ secrets.WEBDAV_PASSWORD }}
        run: |
          cd dist
          {
            echo "$WEBDAV_USERNAME"
            echo "$WEBDAV_PASSWORD"
            echo "cd /"
            echo "mput *"
            echo "quit"
          } | cadaver https://walkonweb.in:2078
